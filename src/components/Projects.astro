---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{hasProjects && (
  <section id="projects" class="py-16 lg:py-24" style={`background-color: ${siteConfig.colors.surface}`}>
    <!-- Shimmer separator -->
    <div class="w-full h-[3px] bar-shimmer mb-16"></div>

    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-12 reveal">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-bold"
          style={`color: ${siteConfig.colors.primaryDark}`}
        >
          Notable Matters
        </h2>
        <div
          class="w-[60px] h-[4px] mt-3 mx-auto rounded-full"
          style={`background-color: ${siteConfig.colors.accent}`}
        ></div>
      </div>

      <!-- Projects Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {siteConfig.projects.map((project: any, i: number) => (
          <div
            class={`project-card card-hover reveal stagger-${i + 1} rounded-xl p-6 border`}
            style={`background-color: white; border-color: ${siteConfig.colors.primaryDark}10`}
          >
            <span
              class="text-4xl font-bold opacity-20"
              style={`color: ${siteConfig.colors.accent}; font-family: 'DM Serif Display', serif`}
            >
              0{i + 1}
            </span>

            <h3
              class="mt-3 text-lg font-bold leading-tight"
              style={`color: ${siteConfig.colors.primaryDark}`}
            >
              {project.name}
            </h3>

            <p
              class="mt-3 text-sm leading-relaxed"
              style={`color: ${siteConfig.colors.primaryDark}80`}
            >
              {project.description}
            </p>

            {project.skills && (
              <div class="mt-4 flex flex-wrap gap-1.5">
                {project.skills.map((skill: string) => (
                  <span
                    class="text-[10px] px-2 py-1 rounded-full font-medium"
                    style={`background-color: ${siteConfig.colors.accent}10; color: ${siteConfig.colors.accent}`}
                  >
                    {skill}
                  </span>
                ))}
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>
)}
