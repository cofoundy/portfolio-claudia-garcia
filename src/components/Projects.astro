---
import { siteConfig } from "../config";
const hasHighlights = siteConfig.experienceHighlights && siteConfig.experienceHighlights.length > 0;
---

{hasHighlights && (
  <section id="experience-highlights" class="py-16 lg:py-24" style={`background-color: ${siteConfig.colors.surface}`}>
    <!-- Shimmer separator -->
    <div class="w-full h-[3px] bar-shimmer mb-16"></div>

    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-12 reveal">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-bold"
          style={`color: ${siteConfig.colors.primaryDark}`}
        >
          Experience Highlights
        </h2>
        <div
          class="w-[60px] h-[4px] mt-3 mx-auto rounded-full"
          style={`background-color: ${siteConfig.colors.accent}`}
        ></div>
      </div>

      <!-- Experience Highlights Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {siteConfig.experienceHighlights.map((highlight: any, i: number) => (
          <div
            class={`highlight-card card-hover reveal stagger-${i + 1} rounded-xl p-6 border`}
            style={`background-color: white; border-color: ${siteConfig.colors.primaryDark}10`}
          >
            <div
              class="text-3xl mb-3"
            >
              {highlight.icon}
            </div>

            <h3
              class="text-base font-bold leading-tight mb-3"
              style={`color: ${siteConfig.colors.primaryDark}`}
            >
              {highlight.title}
            </h3>

            <p
              class="text-sm leading-relaxed"
              style={`color: ${siteConfig.colors.primaryDark}90`}
            >
              {highlight.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>
)}
