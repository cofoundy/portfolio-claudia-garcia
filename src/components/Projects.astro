---
import { siteConfig } from "../config";
const hasHighlights = siteConfig.experienceHighlights && siteConfig.experienceHighlights.length > 0;

const icons = {
  building: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>',
  scale: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"></path>',
  shield: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>',
  globe: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>',
  chart: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>',
};
---

{hasHighlights && (
  <section id="experience-highlights" class="py-16 lg:py-24" style={`background-color: ${siteConfig.colors.surface}`}>
    <!-- Shimmer separator -->
    <div class="w-full h-[3px] bar-shimmer mb-16"></div>

    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-12 reveal">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-bold"
          style={`color: ${siteConfig.colors.primaryDark}`}
        >
          Experience Highlights
        </h2>
        <div
          class="w-[60px] h-[4px] mt-3 mx-auto rounded-full"
          style={`background-color: ${siteConfig.colors.accent}`}
        ></div>
      </div>

      <!-- Experience Highlights Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {siteConfig.experienceHighlights.map((highlight: any, i: number) => (
          <div
            class={`highlight-card card-hover reveal stagger-${i + 1} rounded-xl p-6 border transition-all duration-300`}
            style={`background-color: white; border-color: ${siteConfig.colors.primaryDark}15`}
          >
            <div
              class="w-12 h-12 rounded-lg flex items-center justify-center mb-4"
              style={`background-color: ${siteConfig.colors.accent}15`}
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke={siteConfig.colors.accent}
                viewBox="0 0 24 24"
                set:html={icons[highlight.icon as keyof typeof icons] || icons.building}
              />
            </div>

            <h3
              class="text-base font-bold leading-tight mb-3"
              style={`color: ${siteConfig.colors.primaryDark}`}
            >
              {highlight.title}
            </h3>

            <p
              class="text-sm leading-relaxed"
              style={`color: ${siteConfig.colors.primaryDark}90`}
            >
              {highlight.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>
)}
