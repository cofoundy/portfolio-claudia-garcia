---
import { siteConfig } from "../config";
const hasCredentials = siteConfig.credentials && siteConfig.credentials.length > 0;
---

{hasCredentials && (
  <section id="credentials" class="py-16 lg:py-24" style={`background-color: ${siteConfig.colors.surfaceLight}`}>
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
        <!-- Section Header -->
        <div class="lg:col-span-4 reveal-left">
          <h2
            class="text-3xl sm:text-4xl lg:text-5xl font-bold"
            style={`color: ${siteConfig.colors.primaryDark}`}
          >
            Credentials
          </h2>
          <div
            class="w-[60px] h-[4px] mt-3 rounded-full"
            style={`background-color: ${siteConfig.colors.accent}`}
          ></div>
          <p
            class="mt-4 text-sm leading-relaxed"
            style={`color: ${siteConfig.colors.primaryDark}70`}
          >
            Bar admissions, professional memberships, and certifications.
          </p>
        </div>

        <!-- Credential Groups -->
        <div class="lg:col-span-8">
          <div class="space-y-8">
            {siteConfig.credentials.map((group: any, gi: number) => (
              <div class={`reveal stagger-${gi + 1}`}>
                <h3
                  class="text-sm font-semibold tracking-wider uppercase mb-4"
                  style={`color: ${siteConfig.colors.accent}`}
                >
                  {group.category}
                </h3>
                <div class="space-y-3">
                  {group.items.map((item: any) => (
                    <div
                      class="credential-card flex items-start justify-between rounded-lg border p-4"
                      style={`background-color: white; border-color: ${siteConfig.colors.primaryDark}10`}
                    >
                      <div>
                        <p
                          class="font-semibold text-sm"
                          style={`color: ${siteConfig.colors.primaryDark}`}
                        >
                          {item.title}
                        </p>
                        <p
                          class="text-xs mt-0.5"
                          style={`color: ${siteConfig.colors.primaryDark}60`}
                        >
                          {item.institution}
                        </p>
                      </div>
                      {item.year && (
                        <span
                          class="text-xs font-medium flex-shrink-0 ml-4"
                          style={`color: ${siteConfig.colors.primaryDark}50`}
                        >
                          {item.year}
                        </span>
                      )}
                    </div>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
)}
