---
import { siteConfig } from "../config";
const hasCredentials = siteConfig.credentials && siteConfig.credentials.length > 0;
---

{
  hasCredentials && (
    <section id="credentials" class="p-8 sm:p-12 md:p-16 lg:p-24 reveal">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Credentials
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-8">
              {siteConfig.credentials.map((group) => (
                <div>
                  <h3
                    class="text-lg font-semibold mb-4"
                    style={`color: ${siteConfig.accentColor}`}
                  >
                    {group.category}
                  </h3>
                  <div class="space-y-3">
                    {group.items.map((item) => (
                      <div class="flex items-start justify-between bg-white rounded-lg border border-gray-100 p-4 hover:shadow-md transition-shadow duration-300">
                        <div>
                          <p class="font-semibold text-gray-900">{item.title}</p>
                          <p class="text-sm text-gray-500">{item.institution}</p>
                        </div>
                        {item.year && (
                          <span class="text-sm text-gray-400 flex-shrink-0 ml-4">{item.year}</span>
                        )}
                      </div>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
