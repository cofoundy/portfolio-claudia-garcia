---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{hasExperience && (
  <section id="experience" class="py-16 lg:py-24" style={`background-color: ${siteConfig.colors.surfaceLight}`}>
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <!-- Section Header -->
      <div class="mb-12 reveal">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-bold"
          style={`color: ${siteConfig.colors.primaryDark}`}
        >
          Experience
        </h2>
        <div
          class="w-[60px] h-[4px] mt-3 rounded-full"
          style={`background-color: ${siteConfig.colors.accent}`}
        ></div>
      </div>

      <!-- Vertical Timeline -->
      <div class="relative pl-8 lg:pl-12">
        <!-- Timeline Line -->
        <div class="absolute left-0 top-0 bottom-0">
          <div
            class="absolute left-0 top-0 bottom-0 w-[2px] opacity-40"
            style={`background-color: ${siteConfig.colors.accent}`}
          ></div>
        </div>

        <div class="space-y-10">
          {siteConfig.experience.map((exp: any, i: number) => (
            <div class={`relative reveal stagger-${Math.min(i + 1, 6)}`}>
              <!-- Timeline Dot -->
              <div
                class="timeline-dot absolute w-3 h-3 rounded-full border-2"
                style={`
                  left: -38px;
                  top: 6px;
                  background-color: ${siteConfig.colors.accent};
                  border-color: ${siteConfig.colors.surfaceLight};
                  animation-delay: ${i * 0.15}s;
                `}
              ></div>

              <!-- Content Card -->
              <div
                class="card-hover rounded-xl p-6 border"
                style={`background-color: white; border-color: ${siteConfig.colors.primaryDark}08`}
              >
                <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2">
                  <div>
                    <h3
                      class="text-base font-bold"
                      style={`color: ${siteConfig.colors.primaryDark}`}
                    >
                      {exp.title}
                    </h3>
                    <p
                      class="text-sm font-medium mt-0.5"
                      style={`color: ${siteConfig.colors.accent}`}
                    >
                      {exp.company}
                    </p>
                  </div>
                  <span
                    class="text-xs font-medium px-3 py-1 rounded-full flex-shrink-0"
                    style={`background-color: ${siteConfig.colors.primaryDark}08; color: ${siteConfig.colors.primaryDark}80`}
                  >
                    {exp.dateRange}
                  </span>
                </div>

                {exp.bullets && exp.bullets.length > 0 && (
                  <ul class="mt-3 space-y-1.5">
                    {exp.bullets.slice(0, 3).map((bullet: string) => (
                      <li class="flex items-start gap-2">
                        <span
                          class="mt-2 w-1.5 h-1.5 rounded-full flex-shrink-0"
                          style={`background-color: ${siteConfig.colors.accent}60`}
                        ></span>
                        <span
                          class="text-sm leading-relaxed"
                          style={`color: ${siteConfig.colors.primaryDark}80`}
                        >
                          {bullet}
                        </span>
                      </li>
                    ))}
                  </ul>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
)}
