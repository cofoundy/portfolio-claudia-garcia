---
import { siteConfig } from "../config";
---

<!-- Light Corporate Hero -->
<section id="hero" class="relative overflow-hidden" style={`background-color: ${siteConfig.colors.surfaceLight}`}>
  <!-- Subtle geometric pattern -->
  <div class="absolute inset-0 opacity-[0.03]" style="background-image: radial-gradient(circle at 1px 1px, #1b2838 1px, transparent 0); background-size: 40px 40px;"></div>

  <div class="relative max-w-6xl mx-auto px-6 lg:px-8 pt-20 pb-16 lg:pt-28 lg:pb-20">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-10 lg:gap-16 items-center">
      <!-- Photo Column -->
      <div class="lg:col-span-4 flex justify-center lg:justify-start hero-photo">
        <div class="relative">
          <div
            class="w-48 h-48 lg:w-56 lg:h-56 rounded-full overflow-hidden border-4 shadow-xl"
            style={`border-color: ${siteConfig.colors.accent}`}
          >
            <img
              src={`${import.meta.env.BASE_URL}/profile.jpg`}
              alt={siteConfig.name}
              class="w-full h-full object-cover"
            />
          </div>
          <!-- Alstom badge -->
          <div
            class="absolute -bottom-2 -right-2 px-3 py-1.5 rounded-full text-xs font-semibold shadow-lg"
            style={`background-color: ${siteConfig.colors.primaryDark}; color: ${siteConfig.colors.accent}`}
          >
            Alstom Canada
          </div>
        </div>
      </div>

      <!-- Content Column -->
      <div class="lg:col-span-8 text-center lg:text-left">
        <h1
          class="hero-title text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight"
          style={`color: ${siteConfig.colors.primaryDark}`}
        >
          {siteConfig.name}
        </h1>

        <div class="hero-subtitle mt-4 space-y-2">
          <p
            class="text-lg lg:text-xl font-medium text-center lg:text-left"
            style={`color: ${siteConfig.colors.accent}`}
          >
            {siteConfig.title}
          </p>
          {siteConfig.location && (
            <p
              class="text-sm font-medium text-center lg:text-left flex items-center justify-center lg:justify-start gap-2"
              style={`color: ${siteConfig.colors.primaryDark}70`}
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              {siteConfig.location}
            </p>
          )}
        </div>

        {siteConfig.tagline && (
          <p
            class="hero-description mt-5 text-base lg:text-lg leading-relaxed max-w-2xl"
            style={`color: ${siteConfig.colors.primaryDark}99`}
          >
            {siteConfig.tagline}
          </p>
        )}

        <!-- CTAs -->
        <div class="hero-cta mt-8 flex flex-wrap items-center justify-center lg:justify-start gap-4">
          <a
            href={`mailto:${siteConfig.social?.email}?subject=${siteConfig.cta?.emailSubject || ''}`}
            class="btn-hover px-7 py-3 rounded-full font-semibold text-sm tracking-wide text-white"
            style={`background-color: ${siteConfig.colors.accent}`}
          >
            Get in Touch
          </a>
          {siteConfig.social?.linkedin && (
            <a
              href={siteConfig.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-hover px-7 py-3 rounded-full font-semibold text-sm tracking-wide border-2"
              style={`border-color: ${siteConfig.colors.accent}; color: ${siteConfig.colors.accent}`}
            >
              LinkedIn Profile
            </a>
          )}
        </div>

        <!-- Social icons -->
        <div class="hero-social mt-6 flex items-center justify-center lg:justify-start gap-3">
          {siteConfig.social?.email && (
            <a
              href={`mailto:${siteConfig.social.email}`}
              class="icon-hover w-10 h-10 rounded-full flex items-center justify-center"
              style={`background-color: ${siteConfig.colors.primaryDark}10; color: ${siteConfig.colors.primaryDark}`}
              aria-label="Email"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </a>
          )}
          {siteConfig.social?.linkedin && (
            <a
              href={siteConfig.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="icon-hover w-10 h-10 rounded-full flex items-center justify-center"
              style={`background-color: ${siteConfig.colors.primaryDark}10; color: ${siteConfig.colors.primaryDark}`}
              aria-label="LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>
  </div>

  <!-- Stats Trust Bar -->
  {siteConfig.stats && (
    <div class="hero-stats" style={`background-color: ${siteConfig.colors.primaryDark}`}>
      <div class="max-w-6xl mx-auto px-6 lg:px-8 py-6">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
          {siteConfig.stats.map((stat: any, i: number) => (
            <div>
              <div
                class="stat-number text-2xl lg:text-3xl font-bold"
                style={`color: ${siteConfig.colors.accent}; --index: ${i}`}
              >
                {stat.value}
              </div>
              <div class="text-xs mt-1 tracking-wider uppercase" style={`color: ${siteConfig.colors.surface}80`}>
                {stat.label}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  )}
</section>
