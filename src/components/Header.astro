---
import { siteConfig } from "../config";
---

<!-- Floating Pill Nav -->
<header
  id="floating-nav"
  class="floating-header fixed top-4 left-1/2 -translate-x-1/2 z-50 hidden"
>
  <nav
    class="flex items-center gap-1 px-2 py-2 rounded-full shadow-lg backdrop-blur-md"
    style={`background-color: ${siteConfig.colors.primaryDark}e6; border: 1px solid ${siteConfig.colors.accent}30`}
  >
    <a
      href="#hero"
      class="nav-link px-4 py-2 rounded-full text-sm font-medium transition-colors"
      style={`color: ${siteConfig.colors.surface}`}
    >
      Home
    </a>
    <a
      href="#about"
      class="nav-link px-4 py-2 rounded-full text-sm font-medium transition-colors"
      style={`color: ${siteConfig.colors.surface}`}
    >
      About
    </a>
    <a
      href="#projects"
      class="nav-link px-4 py-2 rounded-full text-sm font-medium transition-colors"
      style={`color: ${siteConfig.colors.surface}`}
    >
      Matters
    </a>
    <a
      href="#experience"
      class="nav-link px-4 py-2 rounded-full text-sm font-medium transition-colors"
      style={`color: ${siteConfig.colors.surface}`}
    >
      Experience
    </a>
    <a
      href="#education"
      class="nav-link px-4 py-2 rounded-full text-sm font-medium transition-colors"
      style={`color: ${siteConfig.colors.surface}`}
    >
      Education
    </a>
  </nav>
</header>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>

<script>
  const nav = document.getElementById('floating-nav');

  window.addEventListener('scroll', () => {
    const currentScroll = window.scrollY;
    if (currentScroll > 400) {
      nav?.classList.remove('hidden');
    } else {
      nav?.classList.add('hidden');
    }
  });

  // Active section highlighting
  const sections = document.querySelectorAll('section[id]');
  const navLinks = nav?.querySelectorAll('a');

  const observerNav = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        navLinks?.forEach(link => {
          link.style.backgroundColor = 'transparent';
          if (link.getAttribute('href') === `#${entry.target.id}`) {
            link.style.backgroundColor = 'rgba(74,144,164,0.2)';
          }
        });
      }
    });
  }, { threshold: 0.3 });

  sections.forEach(section => observerNav.observe(section));
</script>
