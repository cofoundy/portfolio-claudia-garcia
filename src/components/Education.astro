---
import { siteConfig } from "../config";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

{hasEducation && (
  <section id="education" class="py-16 lg:py-24" style={`background-color: ${siteConfig.colors.surface}`}>
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <!-- Section Header -->
      <div class="mb-12 reveal">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-bold"
          style={`color: ${siteConfig.colors.primaryDark}`}
        >
          Education
        </h2>
        <div
          class="w-[60px] h-[4px] mt-3 rounded-full"
          style={`background-color: ${siteConfig.colors.accent}`}
        ></div>
      </div>

      <!-- Education Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {siteConfig.education.map((edu: any, i: number) => (
          <div
            class={`card-hover reveal stagger-${i + 1} rounded-xl p-6 border`}
            style={`background-color: white; border-color: ${siteConfig.colors.primaryDark}10`}
          >
            <div class="flex items-start justify-between">
              <div>
                <h3
                  class="text-lg font-bold"
                  style={`color: ${siteConfig.colors.primaryDark}`}
                >
                  {edu.degree}
                </h3>
                <p
                  class="text-sm font-medium mt-1"
                  style={`color: ${siteConfig.colors.accent}`}
                >
                  {edu.school}
                </p>
              </div>
              <span
                class="text-xs font-medium px-3 py-1 rounded-full flex-shrink-0 ml-4"
                style={`background-color: ${siteConfig.colors.accent}15; color: ${siteConfig.colors.accent}`}
              >
                {edu.dateRange}
              </span>
            </div>

            {edu.achievements && edu.achievements.length > 0 && (
              <ul class="mt-4 space-y-1.5">
                {edu.achievements.map((achievement: string) => (
                  <li class="flex items-start gap-2">
                    <span
                      class="mt-2 w-1.5 h-1.5 rounded-full flex-shrink-0"
                      style={`background-color: ${siteConfig.colors.accent}60`}
                    ></span>
                    <span
                      class="text-sm"
                      style={`color: ${siteConfig.colors.primaryDark}80`}
                    >
                      {achievement}
                    </span>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>
)}
